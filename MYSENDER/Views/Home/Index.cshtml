@using Microsoft.AspNetCore.Mvc.Rendering
@model MYSENDER.ViewModels.SmsModeViewModel
@{
    ViewData["Title"] = "Accueil";
}

@section css_head {
    <link rel="stylesheet" href="~/css/historiques.css" />
    <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
}

@section scripts_body_bottom
    {
    <script src="~/lib/dataTables/media/js/jquery.dataTables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/js-planingpersonnel.js" asp-append-version="true"></script>
}
<div class="row">
    <div class="wrap-logo-title">
        <a href="https://atrium-rec.secourspopulaire.fr/">
            <img alt="List View" src="/images/mySender-icon.png">
            <h1 class="h1" aria-level="1">Bienvenue sur MySender</h1>
        </a>
    </div>
</div>
<div class="row" id="divContainer">
    <div class="col-lg-3">
        @Html.Partial("_LeftMenu")
    </div>
    <div class="col-lg-9">
        <div class="row">
            <h2> Historique des SMS Envoyés</h2>
            <hr class="hrstyle" />
            <div id="historiques" class="shadow-lvl-1">
                <table id="DtbHistorique" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Texte</th>
                            <th>Date d'envoi</th>
                            <th>Contact</th>
                            <th>Emetteur</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Texte</th>
                            <th>Date d'envoi</th>
                            <th>Contact</th>
                            <th>Emetteur</th>
                            <th>Statut</th>
                        </tr>
                    </tfoot>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
