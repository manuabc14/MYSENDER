@model MYSENDER.ViewModels.ContactsViewModel

@{
    ViewData["Title"] = "Index";
}
@section css_head {
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="~/lib/Material-Design-Styled-Text-Field/css/jquery.material.form.min.css" />
}
@section scripts_body_bottom
    {
    <link rel="stylesheet" href="~/lib/Material-Design-Styled-Text-Field/js/jquery.material.form.min.js" />
    <script src="~/js/site.min.js"></script>
}
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contact.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact.Tel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contact.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contact.Tel)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@contact.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
